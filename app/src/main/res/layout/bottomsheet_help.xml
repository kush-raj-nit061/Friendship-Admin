<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"


        android:layout_margin="2dp">

        <ImageView
            android:id="@+id/iv_card_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/baseline_person_24" />

        <TextView
            android:id="@+id/tv_card_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/iv_card_view"
            android:layout_toRightOf="@id/iv_card_view"
            android:text="Add Details>"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/idss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_card_view_title"
            android:layout_marginTop="10dp"
            android:paddingStart="@dimen/margin_10_dp"
            android:layout_toEndOf="@id/iv_card_view"
            android:layout_toRightOf="@id/iv_card_view"
            android:hint="Any random word>"
            android:background="@drawable/container_search"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="RtlSymmetry" />


        <EditText
            android:id="@+id/namess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idss"
            android:layout_marginTop="10dp"
            android:paddingStart="@dimen/margin_10_dp"
            android:layout_toEndOf="@id/iv_card_view"
            android:layout_toRightOf="@id/iv_card_view"
            android:hint="Name Here>"
            android:background="@drawable/container_search"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/emailss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/namess"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/iv_card_view"
            android:paddingStart="@dimen/margin_10_dp"

            android:layout_toRightOf="@id/iv_card_view"
            android:background="@drawable/container_search"
            android:hint="Email here>"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_below="@id/iv_card_view"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_dismiss"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"

                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Cancel"
                android:textAllCaps="false" />
            <Button
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"

                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Add in Team"
                android:textAllCaps="false" />



        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>