<?xml version="1.0" encoding="utf-8"?>
<com.zyp.cardview.YcCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/userCard"
    app:ycCardCornerRadius="6dp"
    app:ycCardElevation="2dp"
    app:ycEndShadowColor="@color/black"
    android:layout_marginTop="4dp"
    android:layout_marginHorizontal="7dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/premium"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="2dp"
            app:lottie_speed="1"
            app:lottie_rawRes="@raw/vip"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            />
        <TextView
            android:id="@+id/college"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_toRightOf="@id/premium"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:scrollHorizontally="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:textSize="15sp"
            android:layout_marginTop="2dp"
            android:text="National institute of technology patna"
            android:layout_height="wrap_content"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:src="@color/black"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"/>
        <TextView
            android:id="@+id/name"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/image"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="53dp"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:text="name"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/branch"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/image"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="37.5dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:scrollHorizontally="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:text="branch"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/year"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/image"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:text="year"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/id"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/image"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="8dp"
            android:textIsSelectable="true"
            android:layout_width="wrap_content"
            android:textColor="@color/red_active"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:text="userId"
            android:layout_height="wrap_content"/>



    </RelativeLayout>

</com.zyp.cardview.YcCardView>