<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CoolFeaturedActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.zyp.cardview.YcCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:ycCardCornerRadius="8dp"
            app:ycCardBackgroundColor="#A465E2"
            app:ycEndShadowColor="@color/blue_active"
            app:ycCardElevation="6dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/purl"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginStart="0dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/todo" />





            </RelativeLayout>








        </com.zyp.cardview.YcCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/card"
            android:layout_marginTop="@dimen/margin_10_dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/position"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:backgroundTint="#A465E2"
                android:hint="Position(1,2)"
                android:textAlignment="center"
                android:background="@drawable/container_search"/>
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="@dimen/margin_10_dp"
                android:backgroundTint="#A465E2"
                android:hint="Name"
                android:textAlignment="center"
                android:background="@drawable/container_search"/>
            <EditText
                android:id="@+id/branch"
                android:layout_marginTop="@dimen/margin_10_dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:backgroundTint="#A465E2"
                android:hint="Branch"
                android:textAlignment="center"
                android:background="@drawable/container_search"/>

            <EditText
                android:id="@+id/year"
                android:layout_marginTop="@dimen/margin_10_dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:backgroundTint="#A465E2"
                android:hint="Year"
                android:textAlignment="center"
                android:background="@drawable/container_search"/>

            <EditText
                android:id="@+id/description"
                android:layout_marginTop="@dimen/margin_10_dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:backgroundTint="#A465E2"
                android:hint="Description"
                android:textAlignment="center"
                android:background="@drawable/container_search"/>

            <Button
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Make Cool Featured"/>








        </LinearLayout>


    </RelativeLayout>



</ScrollView>